<% flat = data.flat[owner] %>

<div class="banner-small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= flat.picture %>);">
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle card-user" %>
      <p><%= flat.name %></p>
      <h3><%= flat.description %></h3>
      <p><%= flat.city_name %></p>
    </div>
    <div class="col-xs-12 col-sm-4">
    </div>
  </div>
</div>
